//////////////////////////////////////////////////////////////////////
// OXY Classes
///////////////////////////////////////////////////////////////////
.oxy
  //translate(50%, -50%)
  -ms-transform: translate(50%, -50%); /* IE 9 */
  -webkit-transform: translate(50%, -50%); /* Chrome, Safari, Opera */
  transform: translate(50%, -50%);

  position absolute
  right 50%
  top 50%
  z-index 2

.ox
  translate(0%, -50%)
  left 0
  position absolute
  top 50%
  z-index 2

.ox_
  translate(0%, -50%)
  position absolute
  right 0
  top 50%
  z-index 2

.oy
  position absolute
  right 50%
  top 0
  z-index 2
  translate(50%, 0%)


.oy_6
  translate(50%, 0%)
  position absolute
  right 50%
  top 0
  z-index 2

.oxy12,
.oxy1,
.oxy2,
.oxy3,
.oxy4,
.oxy5,
.oxy6,
.oxy7,
.oxy8,
.oxy9,
.oxy10,
.oxy11
  display block
  position absolute


.oxy12
  //translate(50%, 0%)
  -ms-transform: translate(50%, 0%); /* IE 9 */
  -webkit-transform: translate(50%, 0%); /* Chrome, Safari, Opera */
  transform: translate(50%, 0%);
  right 50%
  top 0%

.oxy1
  //translate(50%, 0%)
  right 25%
  top 0

.oxy2
  //translate(0%, -50%)
  right 0%
  top 25%

.oxy3
  transform: translate(0%, -50%);
  right 0%
  top 50%

.oxy4
  translate(0%, -50%)
  right 0% top 75%

.oxy5
  //translate(50%, 0%)
  bottom 0%
  right 25%

.oxy6
  //translate(50%, 0%)
  -ms-transform: translate(50%, 0%); /* IE 9 */
  -webkit-transform: translate(50%, 0%); /* Chrome, Safari, Opera */
  transform: translate(50%, 0%);
  bottom 0%
  right 50%

.oxy7
  //translate(50%, 0%)
  bottom 0%
  right 75%

.oxy8
  //translate(0%, -50%)
  left 0%
  top 75%

.oxy9
  //translate(0%, -50%)
  -ms-transform: translate(0%, -50%); /* IE 9 */
  -webkit-transform: translate(0%, -50%); /* Chrome, Safari, Opera */
  left 0%
  top 50%

.oxy10
  //translate(0%, 50%)
  transform translate(0%, 50%);
  left 0%
  top 25%

.oxy11
  transform: translate(-50%, 0%);
  left 25%
  top 0%







