//////////////////////////////////////////////////////
// COMMON
////////////////////////////////////////////////////
.cb
  clear both
  display block
  font-size 0
  height 0
  line-height 0
  width 100%

.rel
  position relative

section.clear
  padding-top 0 !important
  margin-bottom 0 !important
  //box-shadow none !important
  //border none !important
  &:after,
  &:before
    display none !important
  .sw
    //margin-left 0 !important
    margin-bottom 0 !important
    &:after,
    &:before
      display none !important

section.full
  margin-left 0 !important
  .sw
    margin-left 0 !important
  .cw
    width 100% !important
  .cw > *
    margin-left 0

button
  background none
  border none
  position relative
  float left

.mb0
  margin-bottom 0 !important
.mt0
  margin-top 0 !important
.mr0
  margin-right 0 !important
.ml0
  margin-left 0 !important

.m0
  margin 0 !important


// Background (bg-)
.bg-a
  background-color $accent

// Text (tx-)
.tx-a
  color $accent
.txc,
.tx-c
  text-align center
.tx-r
  text-align right
.tx-l
  text-align left

// Vertical Center
// display: table is kinda hacky, but it's a good way to vertically
// align elements that has good browser support
.tx-v
  -webkit-box-sizing border-box
  box-sizing border-box
  display table
  > *
    display table-cell
    margin auto 0
    vertical-align middle



// Background Position
.bgct,
.bg-ct
  background-position center top

.bg-contain,
.bg-contain *
  background-size contain
  background-repeat no-repeat



// Overflow
.ofh
  overflow hidden !important




// Box Shadow
.bs6
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

.bs12
  box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.16)

// Border Radius
.br100
  border-radius 100%

.fill
  width 100%
  height 100%

