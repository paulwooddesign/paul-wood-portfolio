//////////////////////////////////////////////////////////////////////
// FRAMLESS GRID SETTINGS - Joni Korpi - http://framelessgrid.com/
/////////////////////////////////////////////////////////////////////
$cols1 = ((1 * ($column + $gutter) - $gutter) / $em)rem

// Virtical & Horizontal Gutter Size
$gx = (($gutter) / $em)rem
$gy = (($gutter-y) / $em)rem

$gxa = (($gx-A) / $em)rem
$gya = (($gy-A) / $em)rem
$gxb = (($gx-B) / $em)rem
$gyb = (($gy-B) / $em)rem
$gxc = (($gx-C) / $em)rem
$gyc = (($gy-C) / $em)rem
$gxd = (($gx-D) / $em)rem
$gyd = (($gy-D) / $em)rem
$gxe = (($gx-E) / $em)rem
$gye = (($gy-E) / $em)rem

//spacer/Shiv - margin rythem
$spacer = $gx
$sx = $gx
$sy = $gy


$s1 = ($spacer / 1)
$s2 = ($spacer / 2)
$s3 = ($spacer / 3)
$s4 = ($spacer / 4)
$s5 = ($spacer / 5)
$s6 = ($spacer / 6)
$s7 = ($spacer / 7)
$s8 = ($spacer / 8)
$s9 = ($spacer / 9)
$s10 = ($spacer / 10)
