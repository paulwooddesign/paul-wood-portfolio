/////////////////////////////////
// DESIGN SETTINGS
/////////////////////////////////
if (!($body-color))
  $body-color = #ccc

if (!($body-color))
  $body-color-light = #fff

if (!($accent))
  $accent = #AE5FBE

// Colors
green = #bee743
purple = #AE5FBE
blue = #26a7c7
red = #dc243f
brown = #a14124
white = #fff

/////////////////////////////////
// Navigation
// -Still need to work out equation for left fixed nav
/////////////////////////////////
$side-fixed-nav-size-a = 6

/////////////////////////////////
// GRID SETTINGS
/////////////////////////////////
$font-size = 18 // Your base font-size in pixels (18 seems to work across all browsers)
$em = $font-size / 1rem	// Shorthand for outputting ems
$column = 48	// The column-width of your grid in pixels
$gutter = 24 // The width of the horizontal gutter
$gutter-y = 24 // The height of the vertical gutter



// Zone Gutters
if (!($gx-A))
  $gx-A = 36
if (!($gy-A))
  $gy-A = 48
if (!($gs-A))
  $gs-A = 2

if (!($gx-B))
  $gx-B = 28
if (!($gy-B))
  $gy-B = 28
if (!($gs-B))
  $gs-B = 2

if (!($gx-C))
  $gx-C = 24
if (!($gy-C))
  $gy-C = 24
if (!($gs-C))
  $gs-C = 1

if (!($gx-D))
  $gx-D = 22
if (!($gy-D))
  $gy-D = 20
if (!($gs-D))
  $gs-D = .5

if (!($gx-E))
  $gx-E = 12
if (!($gy-E))
  $gy-E = 24
if (!($gs-E))
  $gs-E = .5


/////////////////////////////////
// GRID Ratio Settings (Denominator)
// Zone Numerators array ( 1/ $ratio)
/////////////////////////////////

// Development - Include all Ratios
if (!($ratio-range))
  $ratio-range = (1..32)

if (!($numerators-A))
  $numerators-A = (A 1) (A 2) (A 3) (A 4)

if (!($numerators-B))
  $numerators-B = (B 1) (B 2) (B 3)

if (!($numerators-C))
  $numerators-C = (C 1) (C 2) (C 3)

if (!($numerators-D))
  $numerators-D = (D 1) (D 2) (D 3)

if (!($numerators-E))
  $numerators-E = (E 1) (E 2) (E 3)

